extends ../layout

block content
	h1.
		Blob ID #{preferences._id}
	form(action='/preferences/#{preferences._id}/edit',method='post',name='updatepreferences',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{preferences.name}', name='name')
		p Badge:
			input#inputBadge(type='number', value='#{preferences.badge}', name='badge')
		p DOB:
			input#inputDob(type='date', value='#{preferencesDob}', name='dob')
		p Are you Loved?:
			input#inputIsLoved(type='checkbox', name='isloved', checked=('#{preferences.isloved}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update